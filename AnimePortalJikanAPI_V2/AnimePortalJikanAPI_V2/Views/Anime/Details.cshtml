@model AnimePortalJikanAPI.JikanDecoder.Model.Core.Anime

@{
    ViewBag.Title = Html.DisplayFor(model => model.Title);
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<section id="buy-tickets" class="section-with-bg wow fadeInUp">
    <div class="container">

        <div class="section-header">
            <h2>@Html.DisplayFor(model => model.Title)</h2>
        </div>

        <div class="row justify-content-md-center">
            <div class="col-lg-12">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-4">
                                <img src="@Html.DisplayFor(model => model.ImageURL)" alt="@Html.DisplayFor(model => model.MalId)" class="img-fluid" style="width:225px;height:350px;">
                            </div>
                            <div class="col-lg-8">
                                <div class="col-md-12">
                                    <h4>Synopsis</h4>
                                    <p>@Html.DisplayFor(model => model.Synopsis)</p>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
        <div class="row justify-content-end">
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</section>